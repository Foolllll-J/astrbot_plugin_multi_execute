{
    "whitelist": {
        "description": "使用者白名单",
        "hint": "填入用户 ID 列表，不填表示所有人可用。Bot 管理员默认可用。",
        "type": "list",
        "items": {
            "type": "string"
        },
        "default": []
    },
    "prefix_mode": {
        "description": "前缀模式",
        "hint": "开启时指令参数前需附带唤醒前缀（如 3x /签到）。",
        "type": "bool",
        "default": true
    },
    "interval": {
        "description": "执行间隔时间 (秒)",
        "hint": "连续执行指令之间的间隔时间。",
        "type": "int",
        "default": 1
    },
    "max_times": {
        "description": "最大执行次数限制",
        "hint": "单次指令连续执行的最大次数限制。",
        "type": "int",
        "default": 10
    },
    "monitor_timeout": {
        "description": "指令监控超时时间 (秒)",
        "hint": "单次指令执行的监控超时时间。",
        "type": "int",
        "default": 60
    },
    "show_start_message": {
        "description": "显示开始执行提示",
        "hint": "开启后，开始连续执行时会发送一条提示消息（如：开始连续执行 3 次...）。",
        "type": "bool",
        "default": true
    }
}
